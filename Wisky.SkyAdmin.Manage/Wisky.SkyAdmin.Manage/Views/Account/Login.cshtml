<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Passio</title>
        <link href="../../Content/ace/assets/css/bootstrap-responsive.min.css" rel="stylesheet" />
        <link href="../../Content/ace/assets/css/LogInPage.css" rel="stylesheet" />
    </head>
    <body>
        <div class="logo-container">
            <img src="../../Content/images/login-logo.png" alt="" />
        </div>
        <div class="login-panel">
            <form method="post">
                @Html.AntiForgeryToken()

                <fieldset>
                    <div class="input-box">
                        @Html.TextBoxFor(m => m.Username, new { id = "username", name = "username", required = "required", type = "text", placeholder = "username", @class = "login-input"})
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>
                    <div class="input-box">
                        @Html.PasswordFor(m => m.Password, new { id = "password", name = "password", required = "required", type = "password", placeholder = "password", @class = "login-input" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="input-box">
                        <input type="submit" value="SIGN IN" class="login-btn" />
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="bottom-bg"></div>
    </body>
    </html>