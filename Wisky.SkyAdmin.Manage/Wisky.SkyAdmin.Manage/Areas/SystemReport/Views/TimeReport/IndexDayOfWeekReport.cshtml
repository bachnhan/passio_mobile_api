                                                <div class="row"></div>
                                            </div>

                                            <!-- select & unselect button -->
                                            <div id="filter-option_all" class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 10px;">
                                                <button class="btn btn-primary btn-sm" id="filter-select-all_all">Chọn tất cả</button>
                                                <button class="btn btn-success btn-sm" id="filter-unselect-all_all">Hủy chọn tất cả</button>
                                            </div><!-- Select all and Unselect all -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form class="hidden" id="formReportExcel_all" action="@Url.Action("ReportDayOfWeekExportExcelEPPlus","TimeReport")">
                        <input name="startTime" />
                        <input name="endTime" />
                        <input name="storeIdReport" />
