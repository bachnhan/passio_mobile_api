@model IEnumerable<HmsService.ViewModels.StoreViewModel>
@{
    ViewBag.Title = "Báo cáo theo thứ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .tab-nav.tn-justified > li {
        width: 33%!important;
        padding: 0px;
    }
</style>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h3>Báo cáo theo thứ</h3>
                <h5 class="smallDate" data-role="small-date"></h5>
            </div>
        </div>
        <hr />
        <ul id="TabList" class="tab-nav tn-justified row" style="overflow: hidden; width: 100%">
            <li class="active waves-effect col-md-4"><a data-toggle="tab" id="all" href="#all_tab"><i class="fa fa-globe"></i> Hệ thống</a></li>
            <li class="waves-effect col-md-4"><a data-toggle="tab" id="store" href="#store_tab"><i class="fa fa-home"></i> Cửa hàng</a></li>
            <li class="waves-effect col-md-4"><a data-toggle="tab" id="group" href="#group_tab"><i class="fa fa-users"></i> Nhóm cửa hàng</a></li>
        </ul>
        <div class="tab-content">
            @*all tab*@
            <div id="all_tab" class="tab-pane fade in active">
                <div class="card">
                    <div class="card-header">
                        @* code htbd *@
                        <div class="row" style="margin-top: 19px;">
                            <div class="col-md-12">
                                <div class="styled-select blue semi-square" hidden style="width: 150px;">
                                    <select id="SystemReport">
                                        <option value="0">Tất cả cửa hàng</option>

                                    </select>
                                </div>

                                <form id="form-create-session_all" class="form-inline">
                                    <div class="input-group pull-right">
                                        <div class="dateTime width230">
                                            <div class="fg-line m-t-5">
                                                <div id="reportranger_all" class="height-fix">
                                                    <input id="date-string_all" size="26" readonly class="form-control text-center pull-right">
                                                    <a class="myCelenderA" id=""> <i class="fa fa-calendar"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group-btn FindButtonDateTime">
