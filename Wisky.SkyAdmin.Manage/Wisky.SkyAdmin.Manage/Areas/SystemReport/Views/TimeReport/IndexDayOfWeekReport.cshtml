            </div>
        </div>
    </div>
</div>




<script>
    $('#exportAllStore').on('click', null, function () {
        $('[name=startTime]').val($('#sTime_all').val());
        $('[name=endTime]').val($('#eTime_all').val());
        $('[name=storeIdReport]').val($('#SystemReport').val());
        $('#formReportExcel_all').submit();
    });
    $('#exportOneStore').on('click', null, function () {
        $('[name=startTime]').val($('#sTime').val());
        $('[name=endTime]').val($('#eTime').val());
        $('[name=storeIdReport]').val($('#storeIdReport').val());
        $('#formReportExcel_store').submit();
    });
    $('#exportGroupStore').on('click', null, function () {
        $('[name=startTime]').val($('#sTime_group').val());
        $('[name=endTime]').val($('#eTime_group').val());
        //$('[name=storeIdReport]').val($('#storeGroupCombobox').val());
        $('#formReportExcel_group').submit();
    });

    $(document).ready(function () {
        setupDaterangerpickerall();
        DayOfWeekReportAllStore();
        DayOfWeekReportOneStore();
        //DayOfWeekReportGroupStore();
        GetStoreGroupList();

        //$('#containerCol2').hide();
        $('#container_all').hide();
        $('#container_group').hide();
    });
    //tab hệ thống====================================================================================================================================================
    $('#store').on('click', function (e) {
        $('#btnChart_store').data('show', 'show');
        $('#btnChart_store').html(' <i class="fa fa-plus"></i> Hiển thị biểu đồ');
        $('#container_store').hide();

        $('#btnChart_group').data('show', 'show');
        $('#btnChart_group').html(' <i class="fa fa-plus"></i> Hiển thị biểu đồ');
        $('#container_group').hide();
        setupDaterangerpickerall();
        DayOfWeekReportAllStore();


    });
    function ShowChart_all() {
        var display = $('#btnChart_all').data('show');
        if (display == "hide") {
            $('#btnChart_all').data('show', 'show');
            $('#btnChart_all').html(' <i class="fa fa-plus"></i> Hiển thị biểu đồ');
        }
        else {
            $('#btnChart_all').html(' <i class="fa fa-minus"></i> Ẩn biểu đồ');
            $('#btnChart_all').data('show', 'hide');
        }
        $('#container_all').toggle('show');
    }
    function setupDaterangerpickerall() {
        function cb_all(start, end, label) {
            //console.log(start.toISOString(), end.toISOString(), label);

            //Prepare start time and end time format
            var startTime = start.format("DD/MM/YYYY"),
                endTime = end.format("DD/MM/YYYY"),
                dateString = "(" + startTime + (startTime == endTime ? "" : " - " + endTime) + ")";

            if (label != "Tùy chọn") {
                $('#date-string_all').val(label);
            } else {
                $('#date-string_all').val(dateString);
            }

            $('#sTime_all').val(startTime);
            $('#eTime_all').val(endTime);

            //Chage date at page header
            $('[data-role=small-date]').html(dateString);

            $('#reportrange_all span').html(start.format('MMM D, YYYY') + ' - ' + end.format('MMM D, YYYY'));
        };
        cb_all(moment().add(0, 'week').startOf('isoweek'), moment().add(0, 'week').endOf('isoweek'), "Tuần này");
        $('#reportranger_all').daterangepicker({
            format: 'DD/MM/YYYY',
            startDate: moment().add(0, 'week').startOf('isoweek'),
            endDate: moment().add(0, 'week').endOf('isoweek'),
            minDate: '01/01/2012',
            maxDate: '31/12/2100',
            dateLimit: { days: 365 },
            showDropdowns: true,
            showWeekNumbers: true,
            timePicker: false,
            timePickerIncrement: 1,
            timePicker12Hour: true,
            ranges: {
                'Tuần này': [moment().add(0, 'week').startOf('isoweek'), moment().add(0, 'week').endOf('isoweek')],
                'Tuần trước': [moment().add(-1, 'week').startOf('isoweek'), moment().add(-1, 'week').endOf('isoweek')],
                'Tháng này': [moment().add(0, 'month').startOf('month'), moment().add(0, 'month').endOf('month')],
                'Tháng trước': [moment().add(-1, 'month').startOf('month'), moment().add(-1, 'month').endOf('month')]
            },
            opens: 'left',
            drops: 'down',
            buttonClasses: ['btn', 'btn-sm'],
            applyClass: 'btn-primary',
            cancelClass: 'btn-success',
            separator: ' to ',
            locale: {
                applyLabel: 'Chọn',
                cancelLabel: 'Hủy',
                fromLabel: 'Từ',
                toLabel: 'Đến',
                customRangeLabel: 'Tùy chọn',
                daysOfWeek: ['CN', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7'],
                monthNames: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                firstDay: 1
            }
        }, cb_all);

        $('#reportranger_all').on('apply.daterangepicker', function (ev, picker) {
            DayOfWeekReportAllStore();
        });
    }

    $('#btnSearch_all').on('click', function () {
        if ($("#eTime_all").val().length > 16 || $("#sTime_all").val().length > 16) {
            ShowMessage("Vui lòng nhập thời gian đúng định dạng", 3);
            return;
        }

        DayOfWeekReportAllStore();

    });

    function RefreshTable_all() {
        var oTable = $("#dayRReport_all").dataTable();
        oTable._fnPageChange(0);
        oTable._fnAjaxUpdate();
    };

    var InitProDatatableAll = function (data) {
        $("#dayRReport_all").dataTable({
            "bFilter": false,
            "bSort": false,
            "bRetrieve": true,
            "bScrollCollapse": true,
            'data': data,
            "bProcessing": true,
            "bPaginate": false,
            "iDisplayLength": 50,
            "aLengthMenu": [50, 100],
            "oLanguage": {
                "sSearch": "Tìm kiếm:",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "oPaginate": {
                    "sNext": "<i class='fa fa-chevron-right'></i>",
                    "sPrevious": "<i class='fa fa-chevron-left'></i>"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1, 2, 3, 4, 5, 6, 7, 8],
                    "bSortable": false,
                    "sClass": "text-center"
                },

            ],
            "bAutoWidth": false
        }).fnSetFilteringDelay(delaySearch);
    };

    // select all store
    var DayOfWeekReportAllStore = function () {
        $.ajax({
            type: 'GET',
            url: '@this.Url.Action("LoadDayOfWeekReportAllStore")',
            data: { 'startTime': $('#sTime_all').val(), 'endTime': $('#eTime_all').val() },
            //TODO
            success: function (result) {
                $('#datatable_all').html('<table id="dayRReport_all" class="table table-striped table-bordered table-hover">'
                    + '<thead>'
                    + '<tr>'
                    + '<th>'
                        + '<label style="width: 80px;" class="">Thứ</label>'
                    + '</th>'
                    + '<th>'
                        + '<label class="">Số lượng (Mang đi)</label>'
                    + '</th>'
                    + '<th>'
                        + '<label class="">Thành tiền</label>'
                    + '</th>'
                    + '<th>'
                       + '<label class="">Số lượng (Tại store)</label>'
                    + '</th>'
                    + '<th>'
                       + '<label class="">Thành tiền</label>'
                    + '</th>'
                    + '<th>'
                        + '<label class="">Số lượng (Giao hàng)</label>'
                    + '</th>'
                    + '<th>'
                        + '<label class="">Thành tiền</label>'
                    + '</th>'
                    + '<th>'
                        + '<label class="">Tổng cộng</label>'
                    + '</th>'
                    + '<th>'
                        + '<label class="">Thành tiền</label>'
                    + '</th>'
                    + '</tr>'
                    + '</thead>'
                    + '<tbody></tbody>'
                    + '</table');

                InitProDatatableAll(result.datatable);
                DoanhThuChartAll(result.dataChart)
            }
        });
    };

    function DoanhThuChartAll(dataChart) {
        $('#container_all').highcharts({
            title: {
                text: 'BIỂU ĐỒ HÓA ĐƠN',
                x: -20 //center
            },
            subtitle: {
                text: '',
                x: -20
            },
            xAxis: {
                categories: dataChart.WeekDay
            },
            yAxis: {
                title: {
                    text: 'Hóa đơn'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: ' Hóa đơn'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [
                {
                    name: 'TakeAway',
                    data: dataChart.TakeAway,
                },
                {
                    name: 'AtStore',
                    data: dataChart.AtStore,
                },
                {
                    name: 'Delivery',
                    data: dataChart.Delivery,
                }
            ]
        });
    };
    //kết thúc tab hệ thống===========================================================================================================================================

    //tab cửa hàng====================================================================================================================================================
    function ShowChart_store() {
        var display = $('#btnChart_store').data('show');
        if (display == "hide") {
            $('#btnChart_store').data('show', 'show');
            $('#btnChart_store').html(' <i class="fa fa-plus"></i> Hiển thị biểu đồ');
