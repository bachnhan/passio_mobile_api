                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title text-center">abc</h4>
                                </div>
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <div class="row">

                                        <!-- Chart -->
                                        <div class="col-md-9">
                                            <div id="comparison_all" style="width: 885px; height: auto; margin: 0 auto"></div>
                                        </div>

                                        <!-- Store list check box show here -->
