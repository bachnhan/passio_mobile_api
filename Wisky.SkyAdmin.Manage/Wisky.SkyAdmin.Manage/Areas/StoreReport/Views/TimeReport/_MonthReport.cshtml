    function ShowChart2() {
        var display = $('#btnChart2').data('show');
        if (display == "hide") {
            $('#btnChart2').data('show', 'show');
            $('#btnChart2').html(' <i class="fa fa-plus"></i> Hiển thị biểu đồ');
        }
        else {
