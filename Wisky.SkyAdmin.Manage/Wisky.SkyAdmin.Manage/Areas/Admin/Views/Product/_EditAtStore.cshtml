@model HmsService.ViewModels.ProductDetailMappingViewModel

<form action="@this.Url.Action("EditInStore")" method="POST" id="editAtStoreModal">
    @Html.AntiForgeryToken()
    @*<div id="editAtStoreModal" tabindex="-1" role="dialog" aria-hidden="true">*@
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="assignModalHeader">Cập nhật giá sản phẩm</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">
                                Giá sản phẩm
                            </label>
                            <div class="col-sm-9">
                                @*<input id="Price" name="Price" type="number" min="0" oninput="this.value= this.value.replace(/[^0-9.]/g,'');" step="100"/>*@
                                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type= "number", min="0", oninput = "this.value= this.value.replace(/[^0-9.]/g,'');", step = "100" })
                                @Html.ValidationMessageFor(model => model.Price)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">
                                Khuyến mãi (%)
                            </label>
                            <div class="col-sm-9">
                                @*<input id="DiscountPrice" name="DiscountPrice" type="number" min="0" max="100" oninput="this.value= this.value.replace(/[^0-9.]/g,'');" onkeyup="if(this.value>100){this.value='100';}" step="1"/><span>%</span>*@
                                @*@Html.TextBoxFor(model => model.DiscountPrice, new { @class = "form-control", type = "number", min = "0", max = "100", oninput = "this.value= this.value.replace(/[^0-9.]/g,'');", onkeyup = "if(this.value>100){this.value='100';}", step = "1" })*@
                                @Html.TextBoxFor(model => model.DiscountPercent, new { @class = "form-control", type = "number", min = "0", oninput = "this.value= this.value.replace(/[^0-9.]/g,'');", onkeyup = "if(this.value>100){this.value='100';}", step = "1" })
                                @Html.ValidationMessageFor(model => model.DiscountPercent)
                            </div>
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(model => model.ProductID)
                @Html.HiddenFor(model => model.ProductDetailID)
                @Html.HiddenFor(model => model.StoreID)
                @Html.HiddenFor(model=> model.DiscountPrice)
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary" id="btnUpdate">Cập nhật</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    @*</div>*@
    </form>
   