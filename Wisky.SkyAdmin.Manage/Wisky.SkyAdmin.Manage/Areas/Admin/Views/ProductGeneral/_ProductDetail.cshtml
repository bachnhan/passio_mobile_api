<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3 class="modal-title">Chi tiết sản phẩm</h3>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4" for="CustomerList">
                        Tên sản phẩm
                    </label>

                    <div class="col-sm-8">
                        @Html.DisplayFor(model => model.ProductName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">
                        Mã sản phẩm
                    </label>
                    <div class="col-sm-8">
                        @Html.DisplayFor(model => model.Code, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Product_Price" class="col-md-4">Nhóm sản phẩm</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(q => q.Product.ProductCategory.CateName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Product_Price" class="col-md-4">Giá sản phẩm</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(q => q.Product.Price, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Product_DiscountPercent" class="col-md-4">Giảm giá (%)</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(q => q.Product.DiscountPercent, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Product_DiscountPercent" class="col-md-4">Mô tả</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(q => q.Product.Description, new { @class = "form-control ", @readonly = true })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" class="btn btn-danger">Đóng</button>
            @*<a onclick="editDuplicateProvider()" class="btn btn-primary">Xác nhận</a>*@
        </div>
    </div>
</div>
