@model HmsService.ViewModels.WebPageViewModel

@{
    ViewBag.Title = "Create";
    var currentStoreDomain = this.ViewBag.CurrentDomain as StoreDomainViewModel;
}

<!DOCTYPE html>

<html>
<body>

    <form role="form" action="/Admin/WebPage/Create" method="POST">
        <div class="block-header">
            <h2>Thêm mới tin tức</h2>

            <ul class="actions">
                <li class="m-r-10">
                    <button type="button" class="btn btn-default" onclick="location.href = '@(Url.Action("Index", new { parameters = currentStoreDomain.Directory }))'">Quay lại</button>
                </li>
                <li>
                    <button type="submit" class="btn btn-primary">Hoàn tất</button>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header">
                        <h2>Thông tin chính</h2>
                    </div>
                    <div class="card-body card-padding">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="inputTitle" class="control-label">Tiêu đề</label>
                            <div class="fg-line">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputDescription" class="control-label">Nội dung</label>
                            <div class="fg-line">
                                @Html.TextAreaFor(model => model.PageContent, new { @class = "ckeditor", name = "PageContent" })
                                @Html.ValidationMessageFor(model => model.PageContent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body card-padding">
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="statusChkBox" id="statusChkBox">
                                    <i class="input-helper"></i>
                                    <b>Kích hoạt</b>
                                </label>
                            </div>
                            <input type="hidden" name="status" id="status" value="Deactive" />
                        </div>
                    </div>
                </div>
                <!-- Card: SEO -->
                <div class="card">
                    <div class="card-header">
                        <h2>SEO</h2>
                    </div>
                    <div class="card-body card-padding">
                        <div class="form-group">
                            <label class="control-label">Từ khóa SEO</label>
                            <div class="fg-line">
                                @Html.EditorFor(model => model.MetaKeyword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MetaKeyword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mô tả SEO</label>
                            <div class="fg-line">
                                @Html.TextAreaFor(model => model.MetaDescription, new { @class = "form-control", name = "MetaDescription" })
                                @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Đường dẫn</label>
                            <div class="fg-line">
                                @Html.EditorFor(model => model.SeoName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SeoName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>

    @section scripts {
        <script>
            SKYWEB.Admin.WebPage.init();
        </script>
    }
</body>
</html>