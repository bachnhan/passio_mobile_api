                                    <label class="control-label" id="lableStoreName"></label>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="fg-line">
                                    <input type="text" class="form-control currency number" id="priceAtStore" value="" />
                                </div>
