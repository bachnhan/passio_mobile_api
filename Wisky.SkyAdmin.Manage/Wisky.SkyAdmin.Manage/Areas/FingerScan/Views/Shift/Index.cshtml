                                <tr>
                                    <th><label>STT</label></th>
                                    <th><label>Ca làm việc</label></th>
                                    <th><label>Bắt đầu</label></th>
                                    <th><label>Thời lượng</label></th>
                                    <th><label>Kết thúc</label></th>
                                    <th><label>Trạng thái</label></th>
                                    <th><label>Tùy chọn</label></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

