        }).fnSetFilteringDelay(delaySearch);
    };

    function RefreshTableOrderDetail() {
        var oTable = $("#order-report-detail-table").dataTable();
        oTable._fnPageChange(0);
        oTable._fnAjaxUpdate();
    }
</script>



