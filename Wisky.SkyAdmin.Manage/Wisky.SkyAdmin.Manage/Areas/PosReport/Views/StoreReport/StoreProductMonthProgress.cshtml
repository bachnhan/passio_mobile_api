    function ProductDataProcess ()
    {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("LoadProductCategoriesProgress", "StoreReport")',
            data: { 'startTime': $('#sTime').val(), 'endTime': $('#eTime').val(),'storeId':@ViewBag.storeId },
            success: function (result) {

                //console.log(result.aaData);
                InitProDatatable(result.aaData);
            }
        });
    };

    $('#groupCategoryReport').html('<table id="groupCategoryReportDatatable" class="table table-striped table-bordered table-hover">'
            +'<thead>'
            +'<tr>'
            +'<th>'
