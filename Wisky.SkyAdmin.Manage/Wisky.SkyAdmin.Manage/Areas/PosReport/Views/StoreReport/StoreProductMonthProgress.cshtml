<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-12">
                <h3>
                    Diễn tiến sản phẩm theo tháng
                </h3>
                <h5 class="smallDate" data-role="small-date" id="dateRange"></h5>
            </div>
        </div>
        <hr />
        <div class="row" style="margin-top: 19px;">
            <div class="col-md-5">

                <div class="form-group">
                    <label class="col-md-3 control-label myGroupChooseWeekFromTo">Từ</label>
                    <div class="col-md-9 input-group date" id="fromMonthPicker">
                        <input id="startDate" type='text' class="form-control" />
                        <span class="input-group-addon myCerlenderSpan">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="control-label myGroupChooseWeekFromTo col-md-3">Đến</label>
                    <div class='input-group date col-md-9' id="toMonthPicker">
                        <input id="endDate" type='text' class="form-control" />
                        <span class="input-group-addon myCerlenderSpan">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <!-- STORE DATE -->
            <div>
                <input type="hidden" id="sTime" />
                <input type="hidden" id="eTime" />
            </div><!-- STORE DATE END -->
            <div class="col-md-1">
                <div class="input-group-btn">
                    <a class="btn btn-primary btn-sm" id="btnSearch">
                        <i class="left-icon fa fa-search"></i>   Tìm
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-padding">
        <div id="groupCategoryReport">
            <table id="groupCategoryReportDatatable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            <label class="">Tên sản phẩm</label>
                        </th>
                        <th>
                            <label class="">Ngành hàng</label>
                        </th>
                        <th>
                            <label class="">Tùy chọn</label>
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div><!-- PRODUCT TABLE END -->
        <!-- MODAL FOR SHOWING PRODUCT PROGRESS -->
        <div class="modal fade " tabindex="-1" id="product-detail-report-modal" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <!-- MODAL HEAD -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title text-center"></h4>
                    </div><!-- MODAL HEAD END -->
                    <!-- MODAL BODY -->
                    <div class="modal-body">
                        <!-- PROGRESS CHART -->
                        <div class="row">
                            <div class="col-md-12">
                                <div id="container" style="width: 860px; height: auto; margin: 0px auto; display: block;"></div><!-- PROGRESS CHART END -->
                            </div>
                        </div>
                        <!-- PROGRESS DETAIL TABLE -->
                        <div id="product-report-detail-table-area">
                            <table class="table table-bordered table-hover" id="product-report-detail-table">
                                <thead>
                                    <tr>
                                        <th>Tháng</th>
                                        <th>Số lượng</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div><!-- PROGRESS DETAIL TABLE END -->
                    </div><!-- MODAL BODY END -->
                </div>
            </div>
        </div><!-- MODAL FOR SHOWING PRODUCT PROGRESS END -->
    </div>
</div>
