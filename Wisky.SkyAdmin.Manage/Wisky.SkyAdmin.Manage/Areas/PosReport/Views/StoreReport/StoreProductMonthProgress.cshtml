<script>
    $(function () {
        $('#groupCategoryReport').on('click', '.btnDetail', function () {
            var dateRange = $('#dateRange').html();

            $.ajax({
                url: '@Url.Action("LoadDetailProductMonthProgress", "StoreReport")',
                type: 'Get',
                data: { startTime: $('#sTime').val(), endTime: $('#eTime').val(), storeId: @ViewBag.storeId, productId: $(this).data('pid')},
                success: function (rs) {
                    // Create table of product.
                    InitDetailProDatatable(rs.dataTable);
                    // If progress in one month don't show the chart. Only show for month range larger than 1.
                    if(dateRange.indexOf('-') > -1) {
                        $('#container').show();
                        SetUpChart(rs.dataChart);
                    } else {
                        $('#container').hide();
                    }
                    //Change modal title to macth the product that was clicked.
                    $('.modal-title').html($(this).data('pname'));
                    $('#product-detail-report-modal').modal('show');
                }
            });
        });

        $(document).on('click', '#btnSearch', function () {
            var startStr = $('#startDate').val(),
                endStr = $('#endDate').val(),
                endMonth = endStr.split('/')[0],
                endYear = endStr.split('/')[1];

            var startDate = '01/' + startStr,
            today = moment().format('DD/MM/YYYY').toString();
            if (endStr == today.substring(3, 10)) {
                endDate = today.substring(0, 3) + endStr;
            } else {
                endDate = (new Date(endYear, endMonth, 0).getDate()) + '/' + endStr;
            }

            $('#sTime').val(startDate);
            $('#eTime').val(endDate);
            $('#dateRange').html("(" + startStr + (startStr == endStr? '':' - ' + endStr) + ")");

            ProductDataProcess();
        });

        // Month picker
        $('#fromMonthPicker').datetimepicker({
            viewMode: 'months',
            format: 'MM/YYYY',
            defaultDate: moment().subtract(2, "months"),
            maxDate: moment()
        });

        $('#toMonthPicker').datetimepicker({
            viewMode: 'months',
            format: 'MM/YYYY',
            defaultDate: moment(),
            maxDate: moment()
        });

