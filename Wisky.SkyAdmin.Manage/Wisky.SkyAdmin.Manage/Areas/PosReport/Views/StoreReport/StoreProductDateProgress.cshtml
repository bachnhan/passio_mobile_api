<script>
    $(function () {
        $('#groupCategoryReport').on('click', '.btnDetail', function () {
            $.ajax({
                url: '@Url.Action("LoadDetailProductProgress", "StoreReport")',
                type: 'Get',
                data: { startTime: $('#sTime').val(), endTime: $('#eTime').val(), storeId: @ViewBag.storeId, productId: $(this).data('pid')},
                success: function (rs) {
                    InitDetailProDatatable(rs.dataTable);

                    var dateRange = $("#dateRange").html();
                    if(dateRange.indexOf('-') > -1) {
                        $('#container').show();
                        SetUpChart(rs.dataChart);
                    } else {
                        $('#container').hide();
                    }
                    //Change modal title to macth the product that was clicked.
                    $('.modal-title').html($(this).data('pname'));
                    $('#product-detail-report-modal').modal('show');
                }
            });
        });

        $('#btnSearch').on('click', function () {
            var startTime = $("#sTimeTmp").val(),
                endTime = $("#eTimeTmp").val(),
                dateString = "(" + startTime + (startTime == endTime ? "" : " - " + endTime) + ")";
            // Change date range on header.
            $("#dateRange").html(dateString);

            // Update new date for searching.
            $("#sTime").val(startTime);
            $("#eTime").val(endTime);

            refreshCategoryReportTable();
        });

        // Daterange picker
        function cb(start, end, label) {
            var startTime = start.format("DD/MM/YYYY"),
                endTime = end.format("DD/MM/YYYY"),
                dateString = "(" + startTime + (startTime == endTime ? "" : " - " + endTime) + ")";

            if (label != "Tùy chọn") {
                $('#date-string').val(label);
            } else {
                $("#date-string").val(dateString);
            }

            $("#sTimeTmp").val(startTime);
            $("#eTimeTmp").val(endTime);
            $("#dateRange").html(dateString);
        }
        cb(moment().subtract(1, 'week').startOf('isoweek'), moment().subtract(1, 'week').endOf('isoweek'), 'Tuần trước');

        $('#reportrange').daterangepicker({
            startDate: moment().subtract(1, 'week').startOf('week'),
            endDate: moment().subtract(1, 'week').endOf('week'),
            "opens": "left",
            "maxDate": moment(),
            locale: {
                format: 'DD/MM/YYYY'
            },
            ranges: {
                'Tuần này': [moment().startOf('isoweek'), moment().endOf('isoweek')],
                'Tuần trước': [moment().subtract(1, 'week').startOf('isoweek'), moment().subtract(1, 'week').endOf('isoweek')],
                'Tháng này': [moment().startOf('month'), moment().endOf('month')],
                'Tháng trước': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            }
        }, cb);

        var startTime = $("#sTimeTmp").val(),
            endTime = $("#eTimeTmp").val(),
            dateString = "(" + startTime + (startTime == endTime ? "" : " - " + endTime) + ")";

        $("#sTime").val(startTime);
        $("#eTime").val(endTime);
        // Change date range on header.
        $("#date-string").html(dateString);

        //ProductDataProcess();
        InitProDatatable();
    });

    function ProductDataProcess ()
    {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("LoadProductCategoriesProgress", "StoreReport")',
            data: { 'startTime': $('#sTime').val(), 'endTime': $('#eTime').val(),'storeId':@ViewBag.storeId },
            success: function (result) {

                //console.log(result.datatable);
                InitProDatatable(result.datatable);
            }
        });
    };

    function InitProDatatable() {
        //console.log(data);
        $('#groupCategoryReport').html('<table id="groupCategoryReportDatatable" class="table table-striped table-bordered table-hover">'
            +'<thead>'
            +'<tr>'
            +'<th>'
            +'<label class="">Tên sản phẩm</label>'
            +'</th>'
            +'<th>'
            +'<label class="">Ngành hàng</label>'
            +'</th>'
            +'<th>'
            +'<label class="">Tùy chọn</label>'
            +'</th>'
            +'</tr>'
            +'</thead>'
            +'<tbody></tbody>'
            +'</table>');
        $("#groupCategoryReportDatatable").dataTable({
            "bSort": false,
            "bRetrieve": true,
            "bScrollCollapse": true,
            //"data": data,
            "sAjaxSource" : '@Url.Action("LoadProductCategoriesProgress", "StoreReport")',
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "startTime", "value": $('#sTime').val() },
                { "name": "endTime", "value": $('#eTime').val() },
                { "name": "storeId", "value": @ViewBag.storeId })
            },
            "bProcessing": true,
            "iDisplayLength": 25,
            "aLengthMenu": [25, 50, 100],

            "oLanguage": {
                "sSearch": "Tìm kiếm:",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "oPaginate": {
                    "sNext": "<i class='fa fa-chevron-right'></i>",
                    "sPrevious": "<i class='fa fa-chevron-left'></i>"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1],
                    "bSortable": false
                },
                {
                    "visible": false, "targets": 1
                },
                {
                    "aTargets": [2],
                    "bSortable": false,
                    "mRender": function (data,type, o) {
                        return '<a data-pname="' + o[0] + '" data-pid="'+ o[3] +'" class="btn btn-sm btn-primary btnDetail"><span class="glyphicon glyphicon-eye-open"></span></a>';
                    },
                }
            ],
            "bAutoWidth": true,
            "order": [[1, 'asc']],
            "drawCallback": function (settings) {
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;

                api.column(1, { page: 'current' }).data().each(function (group, i) {
                    if (last !== group) {
                        $(rows).eq(i).before(
                            '<tr><td class="bg-warning" colspan="2">' + group + '</td></tr>'
                        );

                        last = group;
                    }
                });
            },
            "bAutoWidth": false
        }).fnSetFilteringDelay(delaySearch);
        $('table').wrap('<div class="tableDiv-responsive" />');
    };

    function refreshCategoryReportTable() {
        var oTable = $("#groupCategoryReportDatatable").dataTable();
        oTable._fnPageChange(0);
        oTable._fnAjaxUpdate();
    }

    function InitDetailProDatatable(data) {
        //console.log(data);
        $('#product-report-detail-table-area').html('<table class="table table-bordered table-hover" id="product-report-detail-table">'
                        + '<thead>'
                            + '<tr>'
                                + '<th>Ngày</th>'
                                + '<th>Số lượng</th>'
                            + '</tr>'
                        + '</thead>'
                        + '<tbody></tbody>'
                    + '</table>');

        $("#product-report-detail-table").dataTable({
            "bFilter": false,
            "bSort": false,
            "bRetrieve": true,
            "bScrollCollapse": true,
            "data": data,
            //"dom": '<"top">rt<"bottom"lp><"clear">',
            "iDisplayLength": 10,
            "aLengthMenu": [10, 15, 30, 50],
            "oLanguage": {
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trong tổng số _TOTAL_",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " ",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "oPaginate": {
                    "sNext": "<i class='fa fa-chevron-right'></i>",
                    "sPrevious": "<i class='fa fa-chevron-left'></i>"
                }

            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1],
                    "bSortable": false
                },
            ],
            "bAutoWidth": false
        }).fnSetFilteringDelay(delaySearch);
    };

    function SetUpChart(data)
    {
        //console.log(data);
        $('#container').highcharts({
            title: {
                text: 'Số lượng',
                x: -20 //center
            },
            xAxis: {
                categories: data.xAxis
            },
            yAxis: {
                title: {
                    text: ''
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                name: 'Số lượng',
                data: data.yAxis
            }]
        });
    }
</script>
