@model HmsService.ViewModels.AccountEditViewModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3 class="modal-title">Thiết lập khách hàng</h3>
        </div>
        <form role="form" method="post" action="@Url.Action("EditAccountCustomer","Account")" enctype="multipart/form-data">
            <div class="modal-body">

                @this.Html.AntiForgeryToken()
                @Html.HiddenFor(q => q.AccountID)

                <label for="CustomerID">Chọn khách hàng</label>
                @Html.DropDownListFor(q => q.CustomerID, this.Model.AvailableCustomer, new { @class = "form-control selectpicker dropup", title = "Lựa khách hàng", data_live_search = "true", style = "overflowy:true;" })
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">Đóng</button>
                <button class="btn btn-sm btn-primary">Lưu</button>
            </div>
        </form>
    </div>
</div>

